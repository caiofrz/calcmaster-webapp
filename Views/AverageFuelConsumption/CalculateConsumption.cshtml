@model List<calcmaster_webapp.Models.AverageFuelConsumption.Trip>

@{
    ViewData["Title"] = "Consumo das viagens";
}

<h1>@ViewData["Title"]</h1>

<div class="row mt-3">
    @if (Model.Count > 0)
    {
        <h5>A m√©dia de consumo das suas viagens foi:</h5>
        <ul class="list-group list-group-flush">
            @foreach (var trip in Model)
            {
                <li class="list-group-item">
                    @trip.Title.ToString() - @trip.AverageFuelConsumption.ToString("F2") KM/L
                </li>
            }
        </ul>
    }
    else
    {
        <p>Nenhuma viagem foi adicionada ainda.</p>
    }
</div>
