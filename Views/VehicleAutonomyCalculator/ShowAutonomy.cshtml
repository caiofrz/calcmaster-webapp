@model List<calcmaster_webapp.Models.VehicleAutonomy.Vehicle>
    
@{
    ViewData["Title"] = "Autonomia dos veículos";
}

<h1>@ViewData["Title"]</h1>

<div class="row mt-3">
    @if (Model.Count > 0)
    {
        <h5>A autonomia do seus veículos é:</h5>
        <ul class="list-group list-group-flush">
            @foreach (var vehicle in Model)
            {
                <li class="list-group-item">
                    @vehicle.Name.ToString() - @vehicle.Kilometers.ToString("F2") KM
                </li>
            }
        </ul>
    }
    else
    {
        <p>Nenhum veículo foi adicionado ainda.</p>
    }
</div>

